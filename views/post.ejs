<%- include("partials/_head") -%>

<body>

  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.description %>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto text-center">
        <a href="/posts/edit/<%= post._id %>"  class="btn btn-primary">Update Post</a>
        <a href="/posts/<%= post._id %>?_method=DELETE" onclick="return confirm('Delete Post ?')" class="btn btn-danger">Delete Post</a>
      </div>
    </div>
  </div>


  <%- include("partials/_footer") -%>

</body>

</html>
